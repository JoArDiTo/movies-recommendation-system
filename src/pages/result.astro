---
import { MoviePreferenceForm } from "../components/ConditionForm"
import Layout from "../layouts/Layout.astro"
---

<Layout title="Sistema de recomendación de películas">
	<div class="flex justify-between items-center py-5 px-20">
		<div class="flex justify-center items-center">
			<img 
			transition:name="image-logo"
			class="w-24"
			src="public/cinemax-logo.png"
			alt="cinemax"
			/>
			<p
				transition:name="text-logo"  
				class="text-2xl md:text-5xl font-bold text-yellow-500 pl-4 opacity-0 -z-50 md:opacity-100"
			>
				CINEMAX
			</p>
		</div>
		<a 
			class="bg-red-500 hover:bg-red-700 text-white text-md md:text-xl font-bold py-2 px-6 rounded"
			href="/"
			>
			REGRESAR
		</a>
	</div>
	<div class="grid place-items-center pb-10">
		<MoviePreferenceForm client:visible/>
	</div>
</Layout>